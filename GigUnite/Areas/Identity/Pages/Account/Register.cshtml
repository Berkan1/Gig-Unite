@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h4>Create a new account.</h4>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				<input asp-for="Input.Email" class="form-control" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label>Display Name</label>
				<input name="displayname" class="form-control" />
				<span class="text-danger">@ViewData["Error"]</span>
			</div>
			<div class="form-group">
				<label>Date of Birth</label>
				<input type="date" name="dob" class="form-control" />
				<span class="text-danger">@ViewData["DateError"]</span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label><input type="checkbox" name="terms" id="terms" /> I agree to the <a asp-area="" asp-controller="Home" asp-action="Terms">Terms and Conditions</a> 
					and <a href="https://app.termly.io/document/privacy-notice/c580b2ed-2659-48b7-9b9e-0c2550d91026">Privacy Policy</a></label>
					<span class="text-danger">@ViewData["TermsError"]</span>
				</div>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label><input type="checkbox" name="optin" id="optin" /> I wish to opt in to email notifications about gigs recommended to me</label>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
