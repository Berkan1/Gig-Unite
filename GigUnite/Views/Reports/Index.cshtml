@model IEnumerable<GigUnite.Models.Report>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reports</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReportBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
			<td>
				<a asp-area="" asp-controller="Profiles" asp-action="Details" asp-route-id="@item.ReportBy">@Html.DisplayFor(modelItem => item.ReportBy)</a>
			</td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
				<a asp-area="" asp-controller="Profiles" asp-action="Details" asp-route-id="@item.Profile.Displayname">@Html.DisplayFor(modelItem => item.Profile.Displayname)</a>
			</td>
			<td>
				<button class="btn btn-danger" onclick="location.href='@Url.Action("Deactivate", "Reports", new { profileId = item.ProfileId })'">Deactivate user</button>
				<button class="btn btn-primary" onclick="location.href='@Url.Action("Dismiss", "Reports", new { reportId = item.Id })'">Dismiss report</button>
			</td>
        </tr>
}
    </tbody>
</table>
