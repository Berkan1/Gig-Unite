@model GigUnite.Models.Profile

@{
	ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Displayname)'s Profile</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
			@if (Model.ImageURL != null && Model.ImageURL.Length != 0)
			{
				<img src=@Model.ImageURL width="100%">
			}
			else
			{
				<img src="https://storage.googleapis.com/indie-hackers.appspot.com/product-avatars/quick-and-simple-image-placeholders/bcohuFwnmPgIu4aM56YZudq12m02" width="100%">
			}
		</div>
		<div class="col-sx-6 col-sm-6 col-md-8 col-lg-8">
			<p id="age">@Html.DisplayFor(model => model.Dob)</p>
			<p><b>@Html.DisplayNameFor(model => model.Bio)</b></p>
			<p>@Html.DisplayFor(model => model.Bio)</p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
			<p><b>Genres I Like</b></p>
			@foreach (string genre in ViewBag.MyGenres)
			{
				<p><span>@genre</span></p>
			}
		</div>
		<div class="col-xs-6 col-sm-6 col-md-8 col-lg-8">
			<p><b>My 5 favourite bands</b></p>
			<p>@Html.DisplayFor(model => model.Band1)</p>
			<p>@Html.DisplayFor(model => model.Band2)</p>
			<p>@Html.DisplayFor(model => model.Band3)</p>
			<p>@Html.DisplayFor(model => model.Band4)</p>
			<p>@Html.DisplayFor(model => model.Band5)</p>
		</div>
	</div>
<div>
	<a asp-action="Edit">Edit my profile</a>
</div>