@model GigUnite.Models.Profile

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit your profile</h1>
<hr />

<form asp-action="Edit">
	<div class="container">
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-3 offset-md-3 col-lg-3 offset-lg-3">
				<div class="form-group">
					<label asp-for="Displayname" class="control-label"></label>
					<input asp-for="Displayname" class="form-control" />
					<span asp-validation-for="Displayname" class="text-danger"></span>
					<span class="text-danger">@TempData["Error"]</span>
				</div>
			</div>
			<div class="col-sx-6 col-sm-6 col-md-3 col-lg-3">
				<div class="form-group">
					<label asp-for="Dob" class="control-label"></label>
					<input asp-for="Dob" class="form-control" />
					<span asp-validation-for="Dob" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-6 offset-md-3 col-lg-6 offset-lg-3">
				<div class="form-group">
					<label asp-for="Bio" class="control-label"></label>
					<textarea asp-for="Bio" class="form-control" rows="5"></textarea>
					<span asp-validation-for="Bio" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-6 offset-md-3 col-lg-6 offset-lg-3">
				<div class="form-group">
					<label class="control-label">Genres I Like</label><br />
					<select name="genres" id="genres" style="width: 200px; height: 150px" multiple>
						@foreach (string genre in ViewBag.MyGenres)
						{
							<option selected value=@genre>@genre</option>
						}
						@foreach (string genre in ViewBag.Genres)
						{
							<option value=@genre>@genre</option>
						}
					</select>
				</div>
			</div>
		</div>
		<p style="text-align:center"><b>My 5 favourite artists/bands:</b></p>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-4 offset-md-3 col-lg-4 offset-lg-3">
				<div class="form-group">
					<div class="band">
						<label asp-for="Band1" class="control-label"></label>
					</div>
					<div class="bandinput">
						<input asp-for="Band1" class="form-control" />
					</div>
					<span asp-validation-for="Band1" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-4 offset-md-3 col-lg-4 offset-lg-3">
				<div class="form-group">
					<div class="band">
						<label asp-for="Band2" class="control-label"></label>
					</div>
					<div class="bandinput">
						<input asp-for="Band2" class="form-control" />
					</div>
					<span asp-validation-for="Band2" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-4 offset-md-3 col-lg-4 offset-lg-3">
				<div class="form-group">
					<div class="band">
						<label asp-for="Band3" class="control-label"></label>
					</div>
					<div class="bandinput">
						<input asp-for="Band3" class="form-control" />
					</div>
					<span asp-validation-for="Band3" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-4 offset-md-3 col-lg-4 offset-lg-3">
				<div class="form-group">
					<div class="band">
						<label asp-for="Band4" class="control-label"></label>
					</div>
					<div class="bandinput">
						<input asp-for="Band4" class="form-control" />
					</div>
					<span asp-validation-for="Band4" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-6 col-md-4 offset-md-3 col-lg-4 offset-lg-3">
				<div class="form-group">
					<div class="band">
						<label asp-for="Band5" class="control-label"></label>
					</div>
					<div class="bandinput">
						<input asp-for="Band5" class="form-control" />
					</div>
					<span asp-validation-for="Band5" class="text-danger"></span>
				</div>
			</div>
		</div>
		<input type="hidden" asp-for="Id" readonly/>
		<input type="hidden" asp-for="City" readonly/>
		<input type="hidden" asp-for="UserId" readonly/>
		<input type="hidden" asp-for="ImageURL" readonly/>
		<input type="hidden" name="ogName" value="@ViewBag.OgName" readonly/>

		<div class="form-group">
			<input type="submit" value="Save" class="btn btn-primary" />
		</div>
	</div>
</form>

<div>
	<a asp-action="MyProfile">Back to my profile</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}